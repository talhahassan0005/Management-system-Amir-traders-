# Copy this file to `.env.production` on the VPS server (DO NOT COMMIT REAL SECRETS)

# MongoDB Atlas connection string (use a dedicated prod user; rotate password)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/<db>?retryWrites=true&w=majority&appName=<appName>

# NextAuth
NEXTAUTH_URL=https://amirtraders.tech
# Generate a strong random secret: openssl rand -base64 32
NEXTAUTH_SECRET=<strong-random-secret>

# Site
SITE_URL=https://amirtraders.tech
NEXT_PUBLIC_SITE_URL=https://amirtraders.tech

# Optional analytics/monitoring
NEXT_PUBLIC_GA_ID=
SENTRY_DSN=
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
